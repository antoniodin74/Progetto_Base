<header>
  <!-- Fixed navbar -->
  <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Home</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav me-auto mb-2 mb-md-0">
          {{#if (isEqual user.livello 1)}}
          <li class="nav-item">
            <a class="nav-link" href="/utente">Utenti</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/utente/newUtente">New Utente</a>
          </li>
          {{/if}}
          <li class="nav-item">
            <a class="nav-link" href="/menu">Menu</a>
          </li>
          <!--<li class="nav-item">
            <a class="nav-link disabled">Disabled</a>
          </li>-->
          {{#if user}}
          <li class="nav-item nav-link">{{user.nome}}</li>
          <li class="nav-item">
            <a class="nav-link active" href="/auth/logout">Logout</a>
          </li>
          {{else}}
          <li class="nav-item">
          <a class="nav-link active" href="/auth/login">Login</a>
          </li>
          <li class="nav-item">
          <a class="nav-link active" href="/auth/signup">Signup</a>
          </li>
          {{/if}}
        </ul>
        <form class="d-flex" role="search" method="get">
          <input value="{{search}}" class="form-control me-2" type="search" name="q" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success" type="submit">Search</button>
          <button onclick="this.parentNode.q.value=''" class="btn btn-outline-secondary ms-2" type="submit">RESET</button>
        </form>
      </div>
    </div>
  </nav>
</header>